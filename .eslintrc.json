{
  "extends": [
    "eslint:recommended",
    "plugin:tailwindcss/recommended",
    "next/core-web-vitals"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "max-len": [
      "error",
      {
        "code": 80
      }
    ]
  }
}